<% @miniposts.each do |minipost| %>
  <tr>
    <td><%= minipost.content %></td>
    <td><%= minipost.user_id %></td>
    <td><%= link_to 'Show', minipost %></td>
    <td><%= link_to 'Edit', edit_minipost_path(minipost) %></td>
    <td><%= link_to 'Destroy', minipost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

